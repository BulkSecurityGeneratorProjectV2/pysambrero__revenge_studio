                    <div class="col-xs-12" style="margin-top: 20px;">
                        <label for="b64_action_type">Action :</label>
                        <select id="b64_action_type" class="form-control">
                            <option value="0" selected="selected">Encode</option>
                            <option value="1">Decode</option>
                        </select>
                    </div>

                    <div class="col-xs-12" style="margin-top: 20px;">
                        <button class="btn btn-success btn-sm" onclick="ToolboxModule.B64encdecString()">
